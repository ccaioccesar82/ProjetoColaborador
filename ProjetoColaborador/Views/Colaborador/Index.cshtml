@model ProjetoColaborador.Models.Entities.Colaborador;
@using ProjetoColaborador.Models.Entities


@{
	IList<Colaborador>? colaboradores = ViewData["ColaboradoresLista"] as IList<Colaborador>;

	IList<Colaborador>? colaboradoresFiltrados = ViewData["ColaboradorFiltrado"] as IList<Colaborador>;

}
<div id="container">
	<div class="buttons">
		<button type="button" class="btn btn-lg btn-primary" data-toggle="modal" data-target="#exampleModalCenter" onclick=openModal()>
		Criar colaborador
	</button>
		<button type="button" class="btn btn-secondary btn-lg" data-toggle="modal" data-target="#exampleModalCenter" onclick=openModalEdit()>
		Editar colaborador
	</button>
	</div>


	<div class="form-outline" data-mdb-input-init>
		<input id="search-input" type="search" class="form-control" placeholder="Buscar colaborador" aria-label="Search" />
	</div>
</div>


<table id="tabela-colaborador" class="table table-striped table-hover">
	<thead>
		<tr>
			<th>
				Id
			</th>

			<th>
				Nome
			</th>
			<th>
				Email
			</th>
			<th>
				Telefone
			</th>
			<th>Cargo</th>
		</tr>

	</thead>

	<tbody>

		
			@{	if (colaboradores != null)
				{

					foreach (var item in colaboradores)
					{

						<tr class="colabs">
						<td>
							@Html.DisplayFor(Model => item.Id)
						</td>
							<td class="colaborador name">
								@Html.DisplayFor(Model => item.Name)
							</td>
							<td>
								@Html.DisplayFor(Model => item.Email)
							</td>
							<td>
								@Html.DisplayFor(Model => item.Telefone)
							</td>
							<td>
								@Html.DisplayFor(Model => item.CargoId)
							</td>

						</tr>

					}
				}
			
			}

		
	</tbody>
	</table>


	<dialog id="caixa-modal">
	<form asp-action="Create" method="post" id="form-create" >

	<span id="span-create">Todos os campos devem ser preenchidos</span>

		<label>Nome:</label>
		<input id="input-texto" type="text" asp-for="Name" class="inputs required"/>

		<label>Email</label>
		<input id="input-texto" type="email" asp-for="Email" class="inputs required"/>

		<label>Telefone</label>
		<input id="input-texto" type="text" asp-for="Telefone" class="inputs required"/>
		<label id="label-cargo">Cargo desempenhado: </label>

		<br>

		<input type="radio" name="CargoId" value="0" checked> Programador<br>

		<input type="radio" name="CargoId" value="1"> Designer<br>

		<input type="radio" name="CargoId" value="2"> Comercial<br>

		<input type="radio" name="CargoId" value="3"> TechLeader<br>

		<br>


		<button id="submit-create" type="submit">Criar</button>
	</form>
	</dialog>




<dialog id="caixa-modal-edit">
	<form asp-action="Edit" method="post" id="form-edit">
		<span id="span-edit">Todos os campos devem ser preenchidos</span>


		<label>Id do colaborador:</label>
		<input id="input-texto" type="text" asp-for="Id" class="inputs edits" />

		<label>Nome:</label>
		<input id="input-texto" type="text" asp-for="Name" class="inputs edits" />

		<label>Email</label>
		<input id="input-texto" type="email" asp-for="Email" class="inputs edits" />

		<label>Telefone</label>
		<input id="input-texto" type="text" asp-for="Telefone" class="inputs edits" />
		<label id="label-cargo">Cargo desempenhado: </label>

		<br>

		<input type="radio" name="CargoId" value="0" checked> Programador<br>

		<input type="radio" name="CargoId" value="1"> Designer<br>

		<input type="radio" name="CargoId" value="2"> Comercial<br>

		<input type="radio" name="CargoId" value="3"> TechLeader<br>

		<br>


		<button id="btn-editar" type="submit">Editar</button>
	</form>
</dialog>